- @page_title = @account.user_name

%h2.w-200.mt-50.center-block.center-text.fs-2.bg-gold.white.p-15 Profile

.mt-50.w-250.center-block
  .center-text
    %p.bold Username
    %p.mt-10= @account.user_name
  .center-text.mt-30
    %p.bold Email:
    %p.mt-10= @account.email

%h2.w-200.center-block.mt-40.center-text Options

%ul.mt-20.w-200.center-block
  - if rodauth.otp_exists?
    %li
      %a.block.btn.bg-primary.white{href: rodauth.recovery_codes_path} View Recovery Codes
    %li.mt-10
      %a.block.btn.bg-warning.white{href: rodauth.two_factor_disable_path} Disable 2FA
  - else
    %li
      %a.block.btn.bg-primary.white{href: rodauth.two_factor_manage_path} Setup 2FA
  %li.mt-10
    %a.block.btn.bg-primary.white{href: "/change-user-name"} Change User Name
  %li.mt-10
    %a.block.btn.bg-primary.white{href: rodauth.change_login_path} Change Email
  %li.mt-10
    %a.block.btn.bg-primary.white{href: rodauth.change_password_path} Change Password
  %li.mt-10
    %a.block.btn.bg-primary.white{href: "/security-log"} Security Log
  %li.mt-10
    %a.block.btn.bg-primary.white{href: "/export-data"} Export Data
  %li
    %a.block.mt-30.btn.bg-danger.white{href: rodauth.close_account_path} Close Account


