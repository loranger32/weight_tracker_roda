- @page_title << "Verify account"

%h3.mt-50.center-text Verify Account

%p.mt-30.center-text You are about to manually verify this account.

%ul.mt-30.w-400.center-block
  %li.center-text#user_name= @target_account.user_name
  %li.mt-10.center-text= @target_account.email
  %li.mt-10.center-text= @target_account.account_status
  %li.mt-10.center-text #{@target_account.batches.length} batches
  %li.mt-10.center-text #{@target_account.entries.length} entries
  %li.mt-10.center-text Last entry: #{@target_account.last_entry_date}


%form#delete-account-form{action: "/admin/accounts/verify", method: :post}
  != csrf_tag("/admin/accounts/verify")

  %input{type: :hidden, name: "account_id", value: @target_account.id}

  %input.mt-30.w-200.center-block.btn.btn-lg.bg-success.white#verify-acount-button{type: :submit, value: "Verify Account"}

- content_for :js, assets([:js, :verify_account])
